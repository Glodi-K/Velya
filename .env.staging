# Configuration Staging Environment
NODE_ENV=staging
PORT=5002

# Base de données staging
MONGODB_URI=mongodb://localhost:27017/Velya_staging

# JWT
JWT_SECRET=staging_jwt_secret_key_2025

# Email (utilise un service de test)
SMTP_USER=staging@velya.com
SMTP_PASS=staging_password

# Feature Flags - Staging (certaines features activées pour test)
FEATURE_CHAT=true
FEATURE_PREMIUM=false
FEATURE_PUSH=true
FEATURE_GEO=true
FEATURE_STRIPE=false
FEATURE_ML=false
FEATURE_REFERRAL=true
MAINTENANCE_MODE=false

# Stripe (mode test)
STRIPE_SECRET_KEY=sk_test_staging_key
STRIPE_PUBLISHABLE_KEY=pk_test_staging_key

# Cloudinary (environnement de test)
CLOUDINARY_CLOUD_NAME=staging_cloud
CLOUDINARY_API_KEY=staging_api_key
CLOUDINARY_API_SECRET=staging_api_secret

# URLs
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:5002

# Logs
LOG_LEVEL=debug